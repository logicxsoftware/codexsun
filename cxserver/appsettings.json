{
  "Environment": "Local",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "AppEnv": {
    "Local": {
      "Database": {
        "Provider": "MariaDb",
        "MariaDbServerVersion": "11.5.2",
        "MinPoolSize": 5,
        "MaxPoolSize": 100,
        "Master": {
          "ConnectionString": "server=localhost;port=3306;database=codexsun_db;user=root;password=DbPass1@@;"
        },
        "Tenant": {
          "ConnectionStringTemplate": "server=localhost;port=3306;database={database};user=root;password=DbPass1@@;"
        },
        "Migration": {
          "TenantBatchSize": 10,
          "MaxParallelTenants": 2
        }
      },
      "MultiTenancy": {
        "Cache": {
          "MetadataTtlSeconds": 60,
          "FeatureTtlSeconds": 30
        },
        "DefaultTenant": {
          "Identifier": "default",
          "Domain": "default.localhost",
          "Name": "Default Tenant",
          "DatabaseName": "tenant1_db",
          "FeatureSettingsJson": "{}",
          "IsolationMetadataJson": "{}"
        }
      },
      "Authentication": {
        "Jwt": {
          "Issuer": "",
          "Audience": "",
          "SigningKey": ""
        }
      }
    },
    "Production": {
      "Database": {
        "Provider": "MariaDb",
        "MariaDbServerVersion": "11.5.2",
        "MinPoolSize": 5,
        "MaxPoolSize": 200,
        "Master": {
          "ConnectionString": "server=mariadb;port=3306;database=codexsun_db;user=root;password=DbPass1@@;"
        },
        "Tenant": {
          "ConnectionStringTemplate": "server=mariadb;port=3306;database={database};user=root;password=DbPass1@@;"
        },
        "Migration": {
          "TenantBatchSize": 25,
          "MaxParallelTenants": 4
        }
      },
      "MultiTenancy": {
        "Cache": {
          "MetadataTtlSeconds": 120,
          "FeatureTtlSeconds": 60
        },
        "DefaultTenant": {
          "Identifier": "default",
          "Domain": "default.localhost",
          "Name": "Default Tenant",
          "DatabaseName": "tenant_dev",
          "FeatureSettingsJson": "{}",
          "IsolationMetadataJson": "{}"
        }
      },
      "Authentication": {
        "Jwt": {
          "Issuer": "",
          "Audience": "",
          "SigningKey": ""
        }
      }
    }
  }
}
